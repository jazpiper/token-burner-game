{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v2/challenges/:path*",
      "destination": "/api/v2/challenges"
    },
    {
      "source": "/api/v2/submissions/:path*",
      "destination": "/api/v2/submissions"
    },
    {
      "source": "/api/v2/games/:id/:path*",
      "destination": "/api/v2/games"
    },
    {
      "source": "/api/v2/games/:id",
      "destination": "/api/v2/status"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}