# Database Configuration
# PostgreSQL connection string (required for production)
# Format: postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require

# Environment
# Node environment: development, production, or test
NODE_ENV=production

# CORS Configuration
# Allowed origins for CORS (comma-separated list or * for all)
CORS_ORIGIN=*

# JWT Authentication
# Secret key for JWT token signing (required for auth endpoints)
# Generate a strong random string in production
JWT_SECRET=your-super-secret-jwt-key-here

# JWT Token expiry time (optional, defaults to 24h)
JWT_EXPIRY=24h

# API Configuration (optional)
# Base URL for API calls (used in quickstart scripts)
API_URL=http://localhost:3000

# API Keys (optional, comma-separated)
# Default API keys for testing/development
API_KEYS=

# Debug Mode (optional)
# Set to any value to enable debug logging
DEBUG=

# Database Reset (optional)
# Set to 'true' to reset tables on startup (use with caution)
RESET_TABLES=false
