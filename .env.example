# Environment
NODE_ENV=production

# Oracle Database
ORACLE_USER=DEV
ORACLE_PASSWORD=your-password-here
# Oracle connection string (TCPS connection to Autonomous Database)
ORACLE_CONNECTION_STRING=(description=(address=(protocol=tcps)(port=1522)(host=your-region.oraclecloud.com))(connect_data=(service_name=your_service_name)))

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=24h

# CORS
CORS_ORIGIN=*

# API Configuration (optional)
API_URL=http://localhost:3000
API_KEYS=

# Debug Mode (optional)
DEBUG=

# Database Reset (optional, use with caution)
RESET_TABLES=false
